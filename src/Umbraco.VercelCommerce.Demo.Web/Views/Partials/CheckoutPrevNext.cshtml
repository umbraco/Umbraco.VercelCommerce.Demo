@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@inherits UmbracoViewPage
@{
    //var backPage = Model.GetCheckoutBackPage();
    var prevStep = Model.GetPreviousPage();
    var nextStep = Model.GetNextPage();
}

<div class="flex flex-col-reverse items-center justify-between mt-8 md:flex-row">
    @if (prevStep != null)
    {
        <div><a href="@(prevStep.Url())" class="inline-flex text-gray-500 hover:text-white"><svg viewBox="0 0 20 20" class="inline-block w-5 h-5 fill-current"><use href="#ico-chevron-left" /></svg> @string.Format("Return to {0}", prevStep.Name)</a></div>
    }
    else
    {
        <div><a href="@(Configuration["Vercel:SiteUrl"])" class="inline-flex text-gray-500 hover:text-white"><svg viewBox="0 0 20 20" class="inline-block w-5 h-5 fill-current"><use href="#ico-chevron-left" /></svg> Return to Store</a></div>
    }
    @if (nextStep != null)
    {
        <div class="mb-4 w-full md:mb-0 md:w-auto">
            <button id="continue" class="bg-blue-600 text-white px-4 py-4 w-full rounded hover:bg-blue-800 disabled:cursor-not-allowed disabled:bg-gray-900 disabled:text-gray-700 disabled:hover:bg-gray-900 disabled:hover:text-gray-700" type="submit">@string.Format("Continue to {0}", nextStep.Name)</button>
        </div>
    }
</div>